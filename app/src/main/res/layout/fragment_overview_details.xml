<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.OverviewDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp">

            <ImageView
                android:id="@+id/venue_overview_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_margin="7dp"
                android:layout_gravity="end"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/rectangular_background"
                android:src="@drawable/ic_edit" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="7dp">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stretchColumns="*">

                    <TableRow android:layout_marginRight="5dp" android:layout_marginEnd="5dp">

                        <LinearLayout android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="Price"
                                android:textSize="20sp"
                                android:textStyle="bold" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginStart="5dp"
                                    android:text="₹1200 - ₹2450" />



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginBottom="5dp"
                                android:text="/per Plate"/>

                        </LinearLayout>


                        <LinearLayout android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="Contact "
                                android:textSize="20sp"
                                android:textStyle="bold" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text=" +(91)- 8483870189" />


                        </LinearLayout>


                    </TableRow>

                    <TableRow>

                        <LinearLayout android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="Address"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:maxLength="80"
                                android:minLines="2"
                                android:maxLines="3"
                                android:text="220/3, Liberty Garden,\n Road No. 4, Next to Mehta Ind.,\n Near ICICI Bank, Malad (West), Mumbai, Maharashtra 400064" />


                        </LinearLayout>

                        <LinearLayout android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="Timings"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/rectangular_background"
                                    android:paddingLeft="2dp"
                                    android:paddingStart="2dp"
                                    android:paddingRight="2dp"
                                    android:paddingEnd="2dp"
                                    android:text="S"
                                    android:textSize="13sp"
                                    android:textColor="@color/textcolor"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/rectangle"
                                    android:paddingLeft="2dp"
                                    android:paddingStart="2dp"
                                    android:paddingRight="2dp"
                                    android:paddingEnd="2dp"
                                    android:layout_marginLeft="3dp"
                                    android:layout_marginStart="3dp"
                                    android:text="M"
                                    android:textSize="13sp"
                                    android:textColor="@color/white"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/rectangle"
                                    android:paddingLeft="2dp"
                                    android:paddingStart="2dp"
                                    android:paddingRight="2dp"
                                    android:paddingEnd="2dp"
                                    android:layout_marginLeft="3dp"
                                    android:layout_marginStart="3dp"
                                    android:text="T"
                                    android:textSize="13sp"
                                    android:textColor="@color/white"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/rectangle"
                                    android:paddingLeft="2dp"
                                    android:paddingStart="2dp"
                                    android:paddingRight="2dp"
                                    android:paddingEnd="2dp"
                                    android:layout_marginLeft="3dp"
                                    android:layout_marginStart="3dp"
                                    android:text="W"
                                    android:textSize="13sp"
                                    android:textColor="@color/white"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/rectangle"
                                    android:paddingLeft="2dp"
                                    android:paddingStart="2dp"
                                    android:paddingRight="2dp"
                                    android:paddingEnd="2dp"
                                    android:layout_marginLeft="3dp"
                                    android:layout_marginStart="3dp"
                                    android:text="T"
                                    android:textSize="13sp"
                                    android:textColor="@color/white"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/rectangle"
                                    android:paddingLeft="2dp"
                                    android:paddingStart="2dp"
                                    android:paddingRight="2dp"
                                    android:paddingEnd="2dp"
                                    android:layout_marginLeft="3dp"
                                    android:layout_marginStart="3dp"
                                    android:text="F"
                                    android:textSize="13sp"
                                    android:textColor="@color/white"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/rectangular_background"
                                    android:paddingLeft="2dp"
                                    android:paddingStart="2dp"
                                    android:paddingRight="2dp"
                                    android:paddingEnd="2dp"
                                    android:layout_marginLeft="3dp"
                                    android:layout_marginStart="3dp"
                                    android:text="S"
                                    android:textSize="13sp"
                                    android:textColor="@color/textcolor"/>

                            </LinearLayout>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="Opening : " />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="Closing :" />

                        </LinearLayout>

                    </TableRow>

                    <LinearLayout android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="USP"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="bottom"
                            android:layout_gravity="bottom">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:src="@drawable/ic_bullet"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLength="40"
                                android:maxLines="3"
                                android:text="220/3, Liberty Garden. 220/3, Liberty Garden." />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="bottom"
                            android:layout_gravity="bottom">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:src="@drawable/ic_bullet"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLength="40"
                                android:maxLines="3"
                                android:text="220/3, Liberty Garden. 220/3, Liberty Garden." />

                        </LinearLayout>



                    </LinearLayout>

                </TableLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Suited for"
                android:textStyle="bold"
                android:textSize="25sp"/>

            <GridView
                android:id="@+id/grid_view"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:numColumns="5"
                android:verticalSpacing="2dp"
                android:horizontalSpacing="2dp"
                android:columnWidth="75dp"
                android:layout_margin="15dp"
                />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Summary"
                    android:textStyle="bold"
                    android:textSize="32sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_margin="5dp"
